<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/toolBar"
        layout="@layout/custom_toolbar" />

    <RelativeLayout
        android:id="@+id/info_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_50"
        android:layout_marginTop="@dimen/margin_20"
        android:background="@drawable/click_base_bt"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">

        <ImageView
            android:id="@+id/icon1"
            android:layout_width="@dimen/weight_30"
            android:layout_height="@dimen/height_30"
            android:layout_centerVertical="true"
            android:scaleType="center"
            android:src="@mipmap/ic_info_name" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_5"
            android:layout_toRightOf="@id/icon1"
            android:text="账户信息"
            android:textColor="@color/menu_btn_text_normal"
            android:textSize="@dimen/text_size_16" />

        <TextView
            android:id="@+id/account_info_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="上海梦创科技有限公司"
            android:textColor="@color/menu_btn_text_normal"
            android:textSize="@dimen/text_size_14" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="@color/bg_myself" />

    <RelativeLayout
        android:id="@+id/image_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_50"
        android:background="@drawable/click_base_bt"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">

        <ImageView
            android:id="@+id/icon2"
            android:layout_width="@dimen/weight_30"
            android:layout_height="@dimen/height_30"
            android:layout_centerVertical="true"
            android:scaleType="center"
            android:src="@mipmap/ic_info_license" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_5"
            android:layout_toRightOf="@id/icon2"
            android:text="营业执照"
            android:textColor="@color/menu_btn_text_normal"
            android:textSize="@dimen/text_size_16" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="请拍照上传"
            android:textColor="@color/menu_btn_text_normal"
            android:textSize="@dimen/text_size_14" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="@color/bg_myself" />

